    <div class="container">

      <form method="post" class="form">
        <input type="text" name="title" value="<%=posts.title %>" placeholder="Title" class="form-control">
        <input type="text" name="author" value="<%=posts.author %>" placeholder="Author" class="form-control">
        <input type="text" name="time" value="<%=posts.time %>" placeholder="date/time" class="form-control">

        <input type="text" name="image" value="<%=posts.image %>" placeholder="image" class="form-control">


        <textarea id="summernote" name="content" value="">
        <%=posts.content %>
      </textarea>
        <script>
        $(document).ready(function() {
          $('#summernote').summernote({
            height: 150
          });
        });
        </script>

    <a href="/edit"> <button type="submit" class="btn btn-primary">Edit Post</button></a>

